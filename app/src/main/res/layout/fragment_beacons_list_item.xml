<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
>

    <ImageView
        android:id="@+id/fragment_beacons_grid_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Beacon Image" />

    <TextView
        android:id="@+id/fragment_beacons_grid_item_tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/beacons_list_text_size" />

    <TextView
        android:id="@+id/fragment_beacons_grid_item_tv_sn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/beacons_list_text_size" />

</LinearLayout>